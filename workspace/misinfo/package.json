{
  "name": "misinfoguard-extension",
  "version": "1.0.0",
  "description": "MisinfoGuard - Real-time misinformation detection browser extension",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "dev:extension": "vite build --watch",
    "build:dev": "NODE_ENV=development npm run build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "setup": "node scripts/setup-dev.js",
    "clean": "rm -rf dist node_modules/.vite",
    "zip": "cd dist && zip -r ../misinfoguard-extension.zip .",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "axios": "^1.6.2",
    "framer-motion": "^10.16.16",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "dexie": "^3.2.4",
    "dexie-react-hooks": "^1.1.7",
    "qr-scanner": "^1.4.2",
    "lucide-react": "^0.294.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/chrome": "^0.0.254",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "@crxjs/vite-plugin": "^2.0.0-beta.21"
  }
}
