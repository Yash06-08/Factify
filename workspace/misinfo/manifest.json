{
  "manifest_version": 3,
  "name": "MisinfoGuard",
  "version": "1.0.0",
  "description": "Real-time misinformation detection using advanced AI and OCR technology",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "https://api.ocr.space/*",
    "https://api.sightengine.com/*",
    "https://api-inference.huggingface.co/*",
    "https://generativelanguage.googleapis.com/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content-script.ts"],
      "css": ["src/content/content-styles.css"]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "MisinfoGuard - Verify Images",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/content/*", "icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
